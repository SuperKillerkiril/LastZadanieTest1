@page "/TEST"
@using UrbanMuse.Models
<h3>Test</h3>
<button class="menu-button" @onclick="ToggleMenu">☰</button>

<div class="dropdown-menu" style="display: @(IsMenuOpen ? "block" : "none")">
    <select @bind="SelectedColor">
        <option value="">Все цвета</option>
        @foreach (var color in Colors)
        {
        <option value="@color">@color</option>
        }
    </select>
</div>

<ul>
    @foreach (var item in FilteredItems)
    {
    <li>@item.Name - @item.Color</li>
    }
</ul>

@code {
    private bool IsMenuOpen = false;
    private string SelectedColor = "";
    private List<string> Colors = new List<string> { "Красный", "Синий", "Зеленый" };
    private List<Item> Items = new List<Item>
    {
        new Item { Name = "Футболка", Color = "Красный" },
        new Item { Name = "Куртка", Color = "Синий" },
        new Item { Name = "Штаны", Color = "Зеленый" }
    };

    private void ToggleMenu()
    {
        IsMenuOpen = !IsMenuOpen;
    }

    private List<Item> FilteredItems => 
        string.IsNullOrEmpty(SelectedColor) ? Items : Items.Where(i => i.Color == SelectedColor).ToList();
}
